<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="DangerButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@android:color/holo_red_light</item>
    </style>

    <style name="GoogleButton">
        <item name="drawableStartCompat">@drawable/ic_google_color</item>
        <item name="android:background">@drawable/idp_button_background_google</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="FacebookButton">
        <item name="drawableStartCompat">@drawable/ic_facebook_white</item>
        <item name="android:background">@drawable/idp_button_background_facebook</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="AppTheme.WhiteEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Inactive underline color-->
        <item name="colorControlNormal">@android:color/white</item>
    </style>
</resources>
