<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/dashboardFragment">

    <action
        android:id="@+id/action_finish_auth"
        app:destination="@id/dashboardFragment"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_verify_email"
        app:destination="@+id/emailVerificationFragment"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_subscription_selection"
        app:destination="@+id/subscriptionSelectionFragment"
        app:launchSingleTop="true" />

    <fragment
        android:id="@+id/emailVerificationFragment"
        android:name="com.appapply.igflexin.ui.emailverification.EmailVerificationFragment"
        android:label="@string/email_verification"
        tools:layout="@layout/email_verification_fragment" >
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.appapply.igflexin.ui.dashboard.DashboardFragment"
        android:label="@string/dashboard"
        tools:layout="@layout/dashboard_fragment">
        <action
            android:id="@+id/action_dashboardFragment_to_instagramAccountManagementFragment"
            app:destination="@id/instagramAccountManagementFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_dashboardFragment_to_nav_graph_auth"
            app:destination="@id/nav_graph_auth"
            app:popUpTo="@id/dashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/instagramAccountManagementFragment"
        android:name="com.appapply.igflexin.ui.instagramaccountmanagement.InstagramAccountManagementFragment"
        android:label="@string/accounts"
        tools:layout="@layout/instagram_account_management_fragment">
        <action
            android:id="@+id/action_instagramAccountManagementFragment_to_subscriptionManagementFragment"
            app:destination="@id/subscriptionManagementFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/subscriptionManagementFragment"
        android:name="com.appapply.igflexin.ui.subscriptionmanagement.SubscriptionManagementFragment"
        android:label="@string/subscription"
        tools:layout="@layout/subscription_management_fragment" />

    <navigation
        android:id="@+id/nav_graph_auth"
        app:startDestination="@id/welcomeScreenFragment">

        <fragment
            android:id="@+id/welcomeScreenFragment"
            android:name="com.appapply.igflexin.ui.welcomescreen.WelcomeScreenFragment"
            android:label="@string/welcome_to_igflexin"
            tools:layout="@layout/welcome_screen_fragment" >
            <action
                android:id="@+id/action_welcomeScreenFragment_to_signUpFragment"
                app:destination="@id/signUpFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
            <action
                android:id="@+id/action_welcomeScreenFragment_to_signInFragment"
                app:destination="@id/signInFragment"
                app:enterAnim="@anim/slide_in_left"
                app:exitAnim="@anim/slide_out_right"
                app:launchSingleTop="true"
                app:popEnterAnim="@anim/slide_in_right"
                app:popExitAnim="@anim/slide_out_left" />
            <action
                android:id="@+id/action_welcomeScreenFragment_to_howItWorksFragment"
                app:destination="@id/howItWorksFragment"
                app:enterAnim="@anim/slide_in_down"
                app:exitAnim="@anim/slide_out_down"
                app:popEnterAnim="@anim/slide_in_down"
                app:popExitAnim="@anim/slide_out_down" />
        </fragment>
        <fragment
            android:id="@+id/signInFragment"
            android:name="com.appapply.igflexin.ui.signin.SignInFragment"
            android:label="Sign in"
            tools:layout="@layout/sign_in_fragment" />
        <fragment
            android:id="@+id/signUpFragment"
            android:name="com.appapply.igflexin.ui.signup.SignUpFragment"
            android:label="Sign up"
            tools:layout="@layout/sign_up_fragment" />
        <fragment
            android:id="@+id/howItWorksFragment"
            android:name="com.appapply.igflexin.ui.howitworks.HowItWorksFragment"
            android:label="How IGFlexin works?"
            tools:layout="@layout/how_it_works_fragment" />
    </navigation>
    <fragment
        android:id="@+id/subscriptionSelectionFragment"
        android:name="com.appapply.igflexin.ui.subscriptionselection.SubscriptionSelectionFragment"
        android:label="subscription_selection_fragment"
        tools:layout="@layout/subscription_selection_fragment" >
        <action
            android:id="@+id/action_subscriptionSelectionFragment_to_subscriptionSelectionDetailFragment"
            app:destination="@+id/subscriptionSelectionDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="false"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/subscriptionSelectionFragment">
            <argument
                android:name="subscriptionID"
                android:defaultValue="weekly_subscription" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/subscriptionSelectionDetailFragment"
        android:name="com.appapply.igflexin.ui.subscriptionselectiondetail.SubscriptionSelectionDetailFragment"
        android:label="subscription_selection_detail_fragment"
        tools:layout="@layout/subscription_selection_detail_fragment" >
        <argument
            android:name="subscriptionID"
            app:argType="string" />
    </fragment>

</navigation>